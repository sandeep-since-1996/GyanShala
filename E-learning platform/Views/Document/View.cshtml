@model E_learning_platform.Models.DocumentDetailsViewModel

@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>

<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@Html.DisplayFor(model => model.Name)</h3>
    </div>
    <div class="panel-body">
        @Html.Raw(Model.Text)
    </div>
    <div class="panel-footer">@Html.DisplayFor(model => model.Date)</div>
</div>

<p>
    @Html.ActionLink("Back", "View", "Course", new { id = Model.CourseId }, null)
</p>
